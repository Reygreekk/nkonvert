<body>

<div class="app-container">
    <div class="header">
        <h1>Score de Glasgow</h1>
        <p>Évaluation neurologique (GCS)</p>
    </div>

    <div class="form-group">
        <label><i class="fas fa-eye"></i> Ouverture des Yeux (Y)</label>
        <select id="yeux" onchange="calculerGCS()">
            <option value="4">4 - Spontanée</option>
            <option value="3">3 - Au bruit (à la demande)</option>
            <option value="2">2 - À la douleur</option>
            <option value="1">1 - Nulle</option>
        </select>
    </div>

    <div class="form-group">
        <label><i class="fas fa-comment"></i> Réponse Verbale (V)</label>
        <select id="verbe" onchange="calculerGCS()">
            <option value="5">5 - Orientée</option>
            <option value="4">4 - Confuse</option>
            <option value="3">3 - Inappropriée</option>
            <option value="2">2 - Incompréhensible</option>
            <option value="1">1 - Nulle</option>
        </select>
    </div>

    <div class="form-group">
        <label><i class="fas fa-hand-fist"></i> Réponse Motrice (M)</label>
        <select id="moteur" onchange="calculerGCS()">
            <option value="6">6 - Obéit à l'ordre</option>
            <option value="5">5 - Localise la douleur</option>
            <option value="4">4 - Évitement (flexion non spécifique)</option>
            <option value="3">3 - Flexion stéréotypée (décortication)</option>
            <option value="2">2 - Extension stéréotypée (décérébration)</option>
            <option value="1">1 - Nulle</option>
        </select>
    </div>

    <div class="result-box">
        <label>Total GCS</label>
        <div class="score-display" id="totalScore">15</div>
        <span id="level" class="interpretation" style="background: var(--success)">Normal</span>
    </div>

    <p class="footer-info">
        Note : Un score ≤ 8 définit un coma et nécessite généralement une intubation.
    </p>
</div>

<script>
    function calculerGCS() {
        const y = parseInt(document.getElementById('yeux').value);
        const v = parseInt(document.getElementById('verbe').value);
        const m = parseInt(document.getElementById('moteur').value);
        
        const total = y + v + m;
        const scoreEl = document.getElementById('totalScore');
        const levelEl = document.getElementById('level');

        scoreEl.innerText = total;

        // Logique d'interprétation
        if (total >= 13) {
            levelEl.innerText = "Traumatisme Léger";
            levelEl.style.background = "var(--success)";
        } else if (total >= 9) {
            levelEl.innerText = "Traumatisme Modéré";
            levelEl.style.background = "var(--warning)";
            levelEl.style.color = "black";
        } else {
            levelEl.innerText = "Coma / Grave";
            levelEl.style.background = "var(--danger)";
            levelEl.style.color = "white";
        }
    }
    
    // Initialisation
    window.onload = calculerGCS;
</script>

